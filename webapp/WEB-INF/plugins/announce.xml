<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?><plug-in>
    <name>announce</name>
    <class>fr.paris.lutece.plugins.announce.service.AnnouncePlugin</class>
    <version>1.1.5</version>
    <description>announce.plugin.description</description>
    <provider>announce.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/announce/announce.png</icon-url>
    <copyright>Copyright (c) 2001-2014 Mairie de Paris</copyright>
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>
    </core-version-dependency>

    <!-- if the plugin must have a connection pool with parameter : 1 - yes, 0 - no -->
    <db-pool-required>1</db-pool-required>

    <!-- Specific plugin CSS -->
    <css-stylesheets>
        <css-stylesheets-scope>portal</css-stylesheets-scope>
        <css-stylesheet>announce/announce.css</css-stylesheet>
        <css-stylesheet>announce/pirobox/white/style.css</css-stylesheet>
        <css-stylesheet>jscalendar/calendar-lutece.css</css-stylesheet>
    </css-stylesheets>
    <!-- Specific plugin JAVASCRIPT -->
    <javascript-files>
        <javascript-files-scope>portal</javascript-files-scope>
        <javascript-file>announce/pirobox/piroBox.1_2_min.js</javascript-file>
        <javascript-file>announce/announce.js</javascript-file>
		<javascript-file>announce/uploadify/jquery.uploadify.v2.1.4.min.js</javascript-file>
		<javascript-file>announce/uploadify/swfobject.js</javascript-file>
		<javascript-file>announce/announceupload.js</javascript-file>
    </javascript-files>
    
    <admin-features>
        <admin-feature>
            <feature-id>ANNOUNCE_MANAGEMENT</feature-id>
            <feature-title>announce.adminFeature.title</feature-title>
            <feature-description>announce.adminFeature.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/announce/ManageAnnounces.jsp</feature-url>
        </admin-feature>
    </admin-features>

    <!-- RBAC Resources -->
    <rbac-resource-types>
        <rbac-resource-type>
            <rbac-resource-type-class>fr.paris.lutece.plugins.announce.service.CategoryResourceIdService</rbac-resource-type-class>
        </rbac-resource-type>
        <rbac-resource-type>
            <rbac-resource-type-class>fr.paris.lutece.plugins.announce.service.SectorResourceIdService</rbac-resource-type-class>
        </rbac-resource-type>
    </rbac-resource-types>

    <!-- Daemons -->
    <daemons>
        <daemon>
            <daemon-id>announceSearchIndexer</daemon-id>
            <daemon-name>announce.daemon.announceSearchIndexer.name</daemon-name>
            <daemon-description>announce.daemon.announceSearchIndexer.description</daemon-description>
            <daemon-class>fr.paris.lutece.plugins.announce.service.announcesearch.AnnounceSearchIndexerDaemon</daemon-class>
        </daemon>
    </daemons>

    <!-- Search Indexer Service -->
    <search-indexers>
        <search-indexer>
            <search-indexer-class>fr.paris.lutece.plugins.announce.service.search.AnnounceIndexer</search-indexer-class>
        </search-indexer>
    </search-indexers>

    <!-- Applications -->
    <applications>
        <application>
            <application-id>announce</application-id>
            <application-class>fr.paris.lutece.plugins.announce.web.AnnounceApp</application-class>
        </application>
		<application>
			<application-id>announce-subscribe</application-id>
			<application-class>fr.paris.lutece.plugins.announce.web.AnnounceSubscribeApp</application-class>
		</application>
    </applications>
    
    <portlets>
		<portlet>
			<portlet-class>fr.paris.lutece.plugins.announce.business.portlet.MyAnnouncesPortletHome</portlet-class>
			<portlet-type-id>ANNOUNCE_MYDASHBOARD_PORTLET</portlet-type-id>
			<portlet-type-name>announce.portlet.MyAnnouncesPortlet.name</portlet-type-name>
			<portlet-creation-url>plugins/announce/portlet/CreatePortletMyAnnounces.jsp</portlet-creation-url>
			<portlet-update-url>plugins/announce/portlet/ModifyPortletMyAnnounces.jsp</portlet-update-url>
			<portlet-create-action-url>plugins/announce/portlet/DoCreatePortletMyAnnounces.jsp</portlet-create-action-url>
			<portlet-modify-action-url>plugins/announce/portlet/DoModifyPortletMyAnnounces.jsp</portlet-modify-action-url>
		    <!-- optional entries -->
	        <portlet-create-script-template>/admin/portlet/script_create_portlet.html</portlet-create-script-template>
	        <portlet-modify-script-template>/admin/portlet/script_modify_portlet.html</portlet-modify-script-template>
	        <portlet-create-specific-template>/admin/plugins/announce/portlet/create_portletmyannounces.html</portlet-create-specific-template>
	        <portlet-modify-specific-template>/admin/plugins/announce/portlet/modify_portletmyannounces.html</portlet-modify-specific-template>
	        <portlet-create-specific-form-template></portlet-create-specific-form-template>
	        <portlet-modify-specific-form-template></portlet-modify-specific-form-template> 
		</portlet>
	</portlets>
	
	<page-include-services>
        <page-include-service>
            <page-include-service-id>announce.include.announceMenu.name</page-include-service-id>
            <page-include-service-class>fr.paris.lutece.plugins.announce.web.includes.AnnounceMenuPageInclude</page-include-service-class>
        </page-include-service>
        <page-include-service>
            <page-include-service-id>announce.include.announceSearchForm.name</page-include-service-id>
            <page-include-service-class>fr.paris.lutece.plugins.announce.web.includes.AnnounceSearchFormPageInclude</page-include-service-class>
        </page-include-service>
    </page-include-services>
</plug-in>