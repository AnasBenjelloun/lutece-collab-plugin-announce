<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?><plug-in>
    <name>announce</name>
    <class>fr.paris.lutece.plugins.announce.service.AnnouncePlugin</class>
    <version>1.1.5</version>
    <description>announce.plugin.description</description>
    <provider>announce.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/announce/announce.png</icon-url>
    <copyright>Copyright (c) 2001-2011 Mairie de Paris</copyright>
    <core-version-dependency>
        <min-core-version>2.4.0</min-core-version>
        <max-core-version/>
    </core-version-dependency>

    <!-- if the plugin must have a connection pool with parameter : 1 - yes, 0 - no -->
    <db-pool-required>1</db-pool-required>

    <!-- Specific plugin CSS -->
    <css-stylesheets>
        <css-stylesheets-scope>xpage</css-stylesheets-scope>
        <css-stylesheet>announce/announce.css</css-stylesheet>
        <css-stylesheet>announce/pirobox/white/style.css</css-stylesheet>
        <css-stylesheet>jscalendar/calendar-lutece.css</css-stylesheet>
    </css-stylesheets>
    <!-- Specific plugin JAVASCRIPT -->
    <javascript-files>
        <javascript-files-scope>xpage</javascript-files-scope>
        <javascript-file>announce/pirobox/piroBox.1_2_min.js</javascript-file>
        <javascript-file>announce/announce.js</javascript-file>
		<javascript-file>announce/uploadify/jquery.uploadify.v2.1.4.min.js</javascript-file>
		<javascript-file>announce/uploadify/swfobject.js</javascript-file>
		<javascript-file>announce/announceupload.js</javascript-file>
    </javascript-files>
    
    <admin-features>
        <admin-feature>
            <feature-id>ANNOUNCE_MANAGEMENT</feature-id>
            <feature-title>announce.adminFeature.title</feature-title>
            <feature-description>announce.adminFeature.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/announce/ManageAnnounces.jsp</feature-url>
        </admin-feature>
    </admin-features>

    <!-- RBAC Resources -->
    <rbac-resource-types>
        <rbac-resource-type>
            <rbac-resource-type-class>fr.paris.lutece.plugins.announce.service.CategoryResourceIdService</rbac-resource-type-class>
        </rbac-resource-type>
        <rbac-resource-type>
            <rbac-resource-type-class>fr.paris.lutece.plugins.announce.service.SectorResourceIdService</rbac-resource-type-class>
        </rbac-resource-type>
    </rbac-resource-types>

    <!-- Daemons -->
    <daemons>
        <daemon>
            <daemon-id>announceSearchIndexer</daemon-id>
            <daemon-name>announce.daemon.announceSearchIndexer.name</daemon-name>
            <daemon-description>announce.daemon.announceSearchIndexer.description</daemon-description>
            <daemon-class>fr.paris.lutece.plugins.announce.service.announcesearch.AnnounceSearchIndexerDaemon</daemon-class>
        </daemon>
    </daemons>

    <!-- Search Indexer Service -->
    <search-indexers>
        <search-indexer>
            <search-indexer-class>fr.paris.lutece.plugins.announce.service.search.AnnounceIndexer</search-indexer-class>
        </search-indexer>
    </search-indexers>

    <!-- Applications -->
    <applications>
        <application>
            <application-id>announce</application-id>
            <application-class>fr.paris.lutece.plugins.announce.web.AnnounceApp</application-class>
        </application>
    </applications>
</plug-in>